@model IEnumerable<ProductView>

@foreach (ProductView product in Model)
{
    <div class="col-sm-4">
        <div class="product-image-wrapper">
            <div class="single-products">
            <div class="productinfo text-center">
                <img src="~/images/shop/@product.ImageUrl" alt="">
                <h2>@product.Price.ToString("C")</h2>
                <p>@product.Name</p>
                <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
            </div>
                <div class="product-overlay">
                    <div class="overlay-content">
                        <h2>@product.Price.ToString("C")</h2>
                        <p>@product.Name</p>
                        <a asp-controller="Shop" asp-action="ProductDetails" asp-route-productId="@product.Id" class="btn btn-default add-to-cart"><i class="fa fa-eye"></i>Подробнее</a>
                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                    </div>
                </div>
            </div>
            <div class="choose">
                <ul class="nav nav-pills nav-justified">
                    <li><a href=""><i class="fa fa-plus-square"></i>Добавить в список желаний</a></li>
                    <li><a href=""><i class="fa fa-plus-square"></i>Добавить к сравнению</a></li>
                </ul>
            </div>
        </div>
    </div>
}