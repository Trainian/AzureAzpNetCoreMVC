@model IEnumerable<AzureAspNetCore.Areas.Admin.Models.UserView>
@{
    Layout = "_Layout";
}

@section Styles
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Пользователи</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <a class="btn btn-primary" asp-controller="Identity" asp-action="User" role="button">Добавить пользователя <i class="fas fa-user-plus"></i></a>
                    <table id="dataTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                @*<th>@Html.DisplayNameFor(model => model.Id)</th>*@
                                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.Roles)</th>
                                <th>Ред.</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    @*<td>@employee.Id</td>*@
                                    <td>@employee.UserName</td>
                                    <td>@employee.Email</td>
                                    <td>@employee.PhoneNumber</td>
                                    <td>
                                        @foreach (var role in employee.Roles.FindAll(x => x.IsEnable))
                                        {
                                            <div>@role.Name</div>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="Identity" asp-action="User" asp-route-id="@employee.Id" class="w-50 p-1"><i class="fas fa-user-edit"></i></a>
                                        <a asp-controller="Identity" asp-action="DeleteUser" asp-route-redirectUrl="@Context.Request.Path" class="w-50 p-1"><i class="fas fa-user-slash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                @*<th>@Html.DisplayNameFor(model => model.Id)</th>*@
                                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.Roles)</th>
                                <th>Ред.</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->
@section Scripts{
    <!-- DataTables -->
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $("#dataTable").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
        });
    </script>
}
